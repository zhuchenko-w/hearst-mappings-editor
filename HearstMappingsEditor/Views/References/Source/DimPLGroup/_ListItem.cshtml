@using HearstMappingsEditor.Data.Models
@using HearstMappingsEditor.Common

@model DimPLGroup

@{
    var notSet = Constants.NotSet;
}

<tr id="@(Model.PLGroupID)">
    <td class="actions-col">
        <a class="btn btn-danger btn-sm btn-remove" data-toggle="modal" data-target="#confirmation-modal" data-confirm-text="Remove selected row?" data-confirm-btn-text="Remove" data-confirm-action="remove" data-is-table-row="1"></a>
    </td>
    <td><span class="readonly-cell uneditable pl-group-id">@Model.PLGroupID</span></td>
    <td>
        @Html.EditorFor(p=>p.PLGroupName,
            new {
                htmlAttributes = new
                {
                    @Value = Model.PLGroupName,
                    @class = "form-control text-input text-input-cell pl-group-name",
                    @type = "text",
                    maxlength = "500",
                    placeholder = notSet,
                    data_initial = Model.PLGroupName,
                    data_val = Model.PLGroupName
                }
            })
    </td>
</tr>
