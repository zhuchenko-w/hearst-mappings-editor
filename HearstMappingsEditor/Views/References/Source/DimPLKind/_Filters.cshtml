@using HearstMappingsEditor.Models
@using HearstMappingsEditor.Data.Models

@model DimPLKindRefs

<tr class="filters">
    <th class="actions-col"></th>
    <th></th>
    <th><input type="text" class="form-control text-filter text-input pl-kind-name" placeholder="Any" data-previous-val=""></th>
    <th>
        <select data-placeholder="Any" class="filterable-select multi pl-group">
            @foreach (var dplg in Model.DimPLGroups)
            {
                <option value="@dplg.PLGroupID">@dplg.PLGroupName</option>
            }
        </select>
    </th>
</tr>

<tr>
    <th class="actions-col"></th>
    <th><span class="sort unsorted" data-sort-type="@((int)DimPLKindSortTypes.Id)"></span></th>
    <th><span class="sort unsorted" data-sort-type="@((int)DimPLKindSortTypes.PLKindName)"></span></th>
    <th><span class="sort unsorted" data-sort-type="@((int)DimPLKindSortTypes.PLGroupName)"></span></th>
</tr>