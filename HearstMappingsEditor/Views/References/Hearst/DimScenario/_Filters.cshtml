@using HearstMappingsEditor.Data.Models
@using HearstMappingsEditor.Models
@using HearstMappingsEditor.Common

@model DimScenarioRefs

@{
    var notSelected = Constants.NotSelected;
}

<tr class="filters">
    <th class="actions-col"></th>
    <th></th>
    <th><input type="text" class="form-control text-filter text-input scenario-desc" placeholder="Any" data-previous-val=""></th>
    <th><input type="text" class="form-control text-filter text-input scenario-code" placeholder="Any" data-previous-val=""></th>
    <th><input type="text" class="form-control text-filter text-input input-code" placeholder="Any" data-previous-val=""></th>
    <th>
        <select data-placeholder="Any" class="filterable-select multi month-num">
            <option value="null">@notSelected</option>
            @foreach (var month in Model.MonthNums)
            {
                <option value="@month">@month</option>
            }
        </select>
    </th>
    <th></th>
</tr>

<tr>
    <th class="actions-col"></th>
    <th><span class="sort unsorted" data-sort-type="@((int)DimScenarioSortTypes.Id)"></span></th>
    <th><span class="sort unsorted" data-sort-type="@((int)DimScenarioSortTypes.ScenarioDesc)"></span></th>
    <th><span class="sort unsorted" data-sort-type="@((int)DimScenarioSortTypes.ScenarioCode)"></span></th>
    <th><span class="sort unsorted" data-sort-type="@((int)DimScenarioSortTypes.InputCode)"></span></th>
    <th><span class="sort unsorted" data-sort-type="@((int)DimScenarioSortTypes.MonthNum)"></span></th>
    <th><span class="sort unsorted" data-sort-type="@((int)DimScenarioSortTypes.CreateDate)"></span></th>
</tr>