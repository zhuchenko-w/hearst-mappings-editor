@using HearstMappingsEditor.Models
@using HearstMappingsEditor.Data.Models

@model BrandMappingRefs

<tr class="filters">
    <th class="actions-col"></th>
    <th>
        <select data-placeholder="Any" class="filterable-select multi project">
            @foreach (var item in Model.DimProjects)
            {
                <option value="@item.ProjectID">@($"{item.ProjectCode} ({item.Description})")</option>
            }
        </select>
    </th>
    <th>
        <select data-placeholder="Any" class="filterable-select multi brand">
            @foreach (var item in Model.DimBrands)
            {
                <option value="@item.LOBDetailID">@($"{item.LOBDetailCode} ({item.LOBDetailDesc})")</option>
            }
        </select>
    </th>
</tr>

<tr>
    <th class="actions-col"></th>
    <th><span class="sort unsorted" data-sort-type="@((int)BrandMappingSortTypes.Project)"></span></th>
    <th><span class="sort unsorted" data-sort-type="@((int)BrandMappingSortTypes.LOBDetail)"></span></th>
</tr>