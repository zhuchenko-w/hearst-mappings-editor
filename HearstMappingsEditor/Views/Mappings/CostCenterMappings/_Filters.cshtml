@using HearstMappingsEditor.Common
@using HearstMappingsEditor.Models
@using HearstMappingsEditor.Data.Models

@model CostCenterMappingRefs

<tr class="filters">
    <th class="actions-col"></th>
    <th>
        <select data-placeholder="Any" class="filterable-select multi dept">
            <option value="null">@Constants.NotSelected</option>
            @foreach (var item in Model.DimDepts)
            {
                <option value="@item.DeptID">@item.Dept</option>
            }
        </select>
    </th>
    <th>
        <select data-placeholder="Any" class="filterable-select multi dept-print-digital">
            @foreach (var item in Model.PrintDigitals)
            {
                <option value="@item">@item</option>
            }
        </select>
    </th>
    <th>
        <select data-placeholder="Any" class="filterable-select multi cost-center">
            @foreach (var item in Model.DimCostCenters)
            {
                <option value="@item.CostCenterID">@item.CostCenterDesc</option>
            }
        </select>
    </th>
</tr>

<tr>
    <th class="actions-col"></th>
    <th><span class="sort unsorted" data-sort-type="@((int)CostCenterMappingSortTypes.Dept)"></span></th>
    <th><span class="sort unsorted" data-sort-type="@((int)CostCenterMappingSortTypes.PrintDigital)"></span></th>
    <th><span class="sort unsorted" data-sort-type="@((int)CostCenterMappingSortTypes.CostCenter)"></span></th>
</tr>