@using HearstMappingsEditor.Models
@using HearstMappingsEditor.Data.Models

@model EntityMappingRefs

<tr class="filters">
    <th class="actions-col"></th>
    <th>
        <select data-placeholder="Any" class="filterable-select multi perimeter">
            @foreach (var item in Model.Perimeters)
            {
                <option value="@item.PerimeterID">@item.PerimeterCode</option>
            }
        </select>
    </th>
    <th>
        <select data-placeholder="Any" class="filterable-select multi entity">
            @foreach (var item in Model.DimEntities)
            {
                <option value="@item.EntityID">@item.EntityCode</option>
            }
        </select>
    </th>
</tr>

<tr>
    <th class="actions-col"></th>
    <th><span class="sort unsorted" data-sort-type="@((int)EntityMappingSortTypes.Perimeter)"></span></th>
    <th><span class="sort unsorted" data-sort-type="@((int)EntityMappingSortTypes.Entity)"></span></th>
</tr>