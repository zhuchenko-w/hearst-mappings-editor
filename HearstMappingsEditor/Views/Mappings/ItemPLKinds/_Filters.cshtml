@using HearstMappingsEditor.Common
@using HearstMappingsEditor.Models
@using HearstMappingsEditor.Data.Models

@model ItemPLKindsRefs

<tr class="filters">
    <th class="actions-col"></th>
    <th></th>
    <th>
        <select data-placeholder="Any" class="filterable-select multi dept">
            <option value="null">@Constants.NotSelected</option>
            @foreach (var item in Model.Depts)
            {
                <option value="@item.DeptID">@item.Dept</option>
            }
        </select>
    </th>
    <th>
        <select data-placeholder="Any" class="filterable-select multi item">
            @foreach (var item in Model.Items)
            {
                <option value="@item.ItemID">@item.UAN</option>
            }
        </select>
    </th>
    <th>
        <select data-placeholder="Any" class="filterable-select multi pl-kind">
            @foreach (var item in Model.PLKinds)
            {
                <option value="@item.PLKindID">@item.PLKindName</option>
            }
        </select>
    </th>
</tr>

<tr>
    <th class="actions-col"></th>
    <th><span class="sort unsorted" data-sort-type="@((int)ItemPLKindsSortTypes.RowId)"></span></th>
    <th><span class="sort unsorted" data-sort-type="@((int)ItemPLKindsSortTypes.Dept)"></span></th>
    <th><span class="sort unsorted" data-sort-type="@((int)ItemPLKindsSortTypes.Item)"></span></th>
    <th><span class="sort unsorted" data-sort-type="@((int)ItemPLKindsSortTypes.PLKind)"></span></th>
</tr>