    </select>
</label>
<label for="nm-sign-pl">
    SignPL
    <select class="filterable-select sign-pl new" id="nm-sign-pl">
        <option value="null">@notSelected</option>
        @foreach (var item in Model.SignPLs)
        {
            <option value="@item">@item</option>
        }
    </select>
</label>

